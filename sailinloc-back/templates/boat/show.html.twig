{% extends 'base.html.twig' %}

{% block title %}Boat{% endblock %}

{% block body %}
    <h1>Boat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ boat.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ boat.name }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ boat.Model }}</td>
            </tr>
            <tr>
                <th>Port</th>
                <td>{{ boat.port }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ boat.price }}</td>
            </tr>
            <tr>
                <th>Disponibility</th>
                <td>{{ boat.disponibility ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ boat.description }}</td>
            </tr>
            <tr>
                <th>CreateAt</th>
                <td>{{ boat.createAt ? boat.createAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_boat_index') }}">back to list</a>

    <a href="{{ path('app_boat_edit', {'id': boat.id}) }}">edit</a>

    {{ include('boat/_delete_form.html.twig') }}
{% endblock %}
